<div class="page-header">
  <h1>New Allergy</h1>
</div>

<%= form_tag(allergies_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :allergies, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :allergies, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :allergy_severity, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :allergy_severity, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :allergy_classification, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :allergy_classification, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Allergy", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
