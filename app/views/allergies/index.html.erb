<div class="page-header">
  <h1>Allergies</h1>
</div>

<p><%= link_to 'Add a New Allergy', new_allergy_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Allergies</th>
      <th>Allergy severity</th>
      <th>Allergy classification</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @allergies.each do |allergy| %>
      <tr>
        <td><%= allergy.allergies %></td>
        <td><%= allergy.allergy_severity %></td>
        <td><%= allergy.allergy_classification %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, allergy_url(allergy), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_allergy_url(allergy), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, allergy_url(allergy), method: 'delete', data: { confirm: "Do you really want to delete this allergy?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

