<div class="page-header">
  <h1>Prescriptions</h1>
</div>

<p><%= link_to 'Add a New Prescription', new_prescription_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Doc</th>
      <th>Medication</th>
      <th>Patient</th>
      <th>Prescription date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @prescriptions.each do |prescription| %>
      <tr>
        <td><%= prescription.doc_id %></td>
        <td><%= prescription.medication_id %></td>
        <td><%= prescription.patient_id %></td>
        <td><%= prescription.prescription_date %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, prescription_url(prescription), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_prescription_url(prescription), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, prescription_url(prescription), method: 'delete', data: { confirm: "Do you really want to delete this prescription?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

