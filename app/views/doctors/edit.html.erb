<div class="page-header">
  <h1>Editing Doctor #<%= @doctor.id %></h1>
</div>

<%= form_tag(doctor_url(@doctor), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :first_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :first_name, @doctor.first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :last_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :last_name, @doctor.last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :doctor, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :doctor, @doctor.doctor, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :specialty, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :specialty, @doctor.specialty, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :street_addr, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :street_addr, @doctor.street_addr, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :city, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :city, @doctor.city, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :state, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :state, @doctor.state, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :zip, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :zip, @doctor.zip, class: 'form-control' %>
    </div>
  </div>

 <!-- <div class="form-group">
    <%= label_tag :patient_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :patient_id, @doctor.patient_id, class: 'form-control' %>
    </div>
  </div>-->

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Doctor", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
