<div class="page-header">
  <h1>Editing Medication #<%= @medication.id %></h1>
</div>

<%= form_tag(medication_url(@medication), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :medication_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :medication_name, @medication.medication_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :dosage_amt, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :dosage_amt, @medication.dosage_amt, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :dosage_daily_frequency, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :dosage_daily_frequency, @medication.dosage_daily_frequency, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :dosage_daily_time, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :dosage_daily_time, @medication.dosage_daily_time, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :dosage_duration, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :dosage_duration, @medication.dosage_duration, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :date_last_filled, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :date_last_filled, @medication.date_last_filled, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :date_next_refill, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :date_next_refill, @medication.date_next_refill, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :doctor, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :doctor, @medication.doctor, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Medication", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
