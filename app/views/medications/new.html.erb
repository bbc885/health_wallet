<div class="page-header">
  <h1>New Medication</h1>
</div>

<%= form_tag(medications_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :medication_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :medication_name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :dosage_amt, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :dosage_amt, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :dosage_daily_frequency, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :dosage_daily_frequency, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :dosage_daily_time, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :dosage_daily_time, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :dosage_duration, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :dosage_duration, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :date_last_filled, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :date_last_filled, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :date_next_refill, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :date_next_refill, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :doctor, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :doctor, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Medication", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
