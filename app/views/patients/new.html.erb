<div class="page-header">
  <h1>New Patient</h1>
</div>

<%= form_tag(patients_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :First_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :First_name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :last_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :last_name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :date_of_birth, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :date_of_birth, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :gender, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :gender, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :blood_type, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :blood_type, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :medication, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :medication, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :allergies, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :allergies, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :doctor, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :doctor, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :med_conditions, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :med_conditions, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :img_url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :img_url, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Patient", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
