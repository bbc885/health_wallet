<div class="page-header">
  <h1>Editing Patient #<%= @patient.id %></h1>
</div>

<%= form_tag(patient_url(@patient), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :First_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :First_name, @patient.First_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :last_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :last_name, @patient.last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :date_of_birth, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :date_of_birth, @patient.date_of_birth, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :gender, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :gender, @patient.gender, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :blood_type, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :blood_type, @patient.blood_type, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :medication, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :medication, @patient.medication, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :allergies, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :allergies, @patient.allergies, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :doctor, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :doctor, @patient.doctor, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :med_conditions, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :med_conditions, @patient.med_conditions, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Patient", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
