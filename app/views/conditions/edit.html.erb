<div class="page-header">
  <h1>Editing Condition #<%= @condition.id %></h1>
</div>

<%= form_tag(condition_url(@condition), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :med_conditions, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :med_conditions, @condition.med_conditions, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :medication_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :medication_name, @condition.medication_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Condition", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
