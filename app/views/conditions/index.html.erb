<div class="page-header">
  <h1>Conditions</h1>
</div>

<p><%= link_to 'Add a New Condition', new_condition_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Med conditions</th>
      <th>Medication name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @conditions.each do |condition| %>
      <tr>
        <td><%= condition.med_conditions %></td>
        <td><%= condition.medication_name %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, condition_url(condition), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_condition_url(condition), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, condition_url(condition), method: 'delete', data: { confirm: "Do you really want to delete this condition?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

